{
    "version": "2.0.0",
    "tasks": [
            {
        "label": "CMake Configure",
        "type": "shell",
        "command": "cmake",
        "args": [
            "-S",
            "${workspaceFolder}",
            "-B",
            "${workspaceFolder}/build"
        ],
        "group": "build",
        "problemMatcher": []
        },
        {
        "label": "CMake Build",
        "type": "shell",
        "command": "cmake",
        "args": [
            "--build",
            "${workspaceFolder}/build"
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "dependsOn": "CMake Configure",
        "problemMatcher": [
            "$gcc"
        ]
        },
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "backend/*.cpp",
                "-o",
                "build/backend/core-systems.exe"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:/msys64/ucrt64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                //"dotenv.cpp",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-lws2_32",
                "-lrpcrt4",
                "-lcurl",
                //"-ldotenv",
                "-mconsole"

            ],
            "options": {
                "cwd": "C:/msys64/ucrt64/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}